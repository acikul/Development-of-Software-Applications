@model TroskovnikViewModel
@{
    ViewBag.Title = "Troskovnik br. " + @Model.SifTroskovnik;
}

<div class="container">
    <div class="row text-center">
        <div class="col-sm-8">
            <h4>
                Troskovnik sa sifrom : @Model.SifTroskovnik
            </h4>
        </div>

        <div class="row justify-content-sm-center">
            <div class="col-sm-1 text-left">
                <a class="btn btn-sm btn-primary cancel"
                   asp-action="Index"
                   asp-route-page="@ViewBag.Page"
                   asp-route-sort="@ViewBag.Sort"
                   asp-route-ascending="@ViewBag.Ascending"
                   title="Povratak na popis troskovnika">
                    <i class="fas fa-undo-alt"></i>
                </a>
            </div>
        </div>

    </div>

    

    <div class="row">
        <table class="table table-striped">
            <thead>
                <tr>
                    @{
                        string[] nazivi = { "Sifra", "Naziv", "Jedinicna cijena", "Stopa PDV-a", "Kolicina", "Ukupna cijena", "Napomena ponuditelja", "Jedinicna cijena s PDV-om", "Ukupna cijena s Pdv-om", "Iznos PDV-a", "Napomena narucitelja", "Sifra troskovnika", "Naziv vrste stavke"};
                        for (int i = 0; i < nazivi.Length; i++)
                        {
                            <th class="text-center">
                                @nazivi[i]
                            </th>
                        }
                    }
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var stavka in Model.Stavke)
                {
                <tr>
                    <td class="text-left col-sm-4">
                        @stavka.SifStavke
                    </td>
                    <td class="text-right col-sm-1">
                        @stavka.NazivStavke
                    </td>
                    <td class="text-center col-sm-1">
                        @stavka.JedCijena
                    </td>
                    <td class="text-right col-sm-2">
                        @stavka.StopaPdv
                    </td>
                    <td class="text-right col-sm-2">
                        @stavka.Kolicina
                    </td>
                    <td class="text-right col-sm-2">
                        @stavka.UkCijena
                    </td>
                    <td class="text-right col-sm-2">
                        @stavka.NapomenaPonuditelja
                    </td>
                    <td class="text-right col-sm-2">
                        @stavka.JedCijenaSaPdv
                    </td>
                    <td class="text-right col-sm-2">
                        @stavka.UkCijenaSaPdv
                    </td>
                    <td class="text-right col-sm-2">
                        @stavka.IznosPdv
                    </td>
                    <td class="text-right col-sm-2">
                        @stavka.NapomenaNarucitelja
                    </td>
                    <td class="text-right col-sm-2">
                        @stavka.SifTroskovnik
                    </td>
                    <td class="text-right col-sm-2">
                        @stavka.NazivVrsteStavke
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
