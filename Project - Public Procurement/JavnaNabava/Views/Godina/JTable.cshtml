@model GodineViewModel

@{
    ViewBag.Title = "Godina";
}
<link href="~/lib/jqueryui/themes/base/jquery-ui.min.css" rel="stylesheet" type="text/css" />
<link href="~/lib/jtable/lib/themes/lightcolor/blue/jtable.min.css" rel="stylesheet" type="text/css" />


<div class="row">
    <div class="col-sm-12" id="godine">

    </div>
</div>


@section scripts {

    <script type="text/javascript" src="~/lib/jquery/jquery.min.js"></script>
    <script type="text/javascript" src="~/lib/jqueryui/jquery-ui.min.js"></script>
    <script type="text/javascript" src="~/lib/jtable/lib/jquery.jtable.min.js"></script>
    <script type="text/javascript" src="~/lib/jtable/lib/localization/jquery.jtable.hr.js"></script>
    <script type="text/javascript">

        $(document).ready(function () {
            var baseurl = window.location.href.replace("/Godina/JTable", "")
            console.log(baseurl)
            $('#godine').jtable({
                title: 'Popis godina',
                paging: true,
                pageSize: 10,
                sorting: true,
                defaultSorting: 'SifGodine DESC',
                actions: {
                    listAction: baseurl + '/jtable/godina/getall',
                    createAction: baseurl + '/jtable/godina/create',
                    updateAction: baseurl + '/jtable/godina/update',
                    deleteAction: baseurl + '/jtable/godina/delete'
                },
                fields: {

                    SifGodine: {
                        key: true,
                        title: 'Sifra godine'

                    },
                    VrijednostGodine: {
                        title: 'Naziv godine',
                        width: '20%'
                    }
                }
            });

            $("#godine").jtable('load');


        });
    </script>
    <partial name="IncludeValidation" />
}