@model GradViewModel

@{
    ViewBag.Title = "Gradovi";
}
<link href="~/lib/jqueryui/themes/base/jquery-ui.min.css" rel="stylesheet" type="text/css" />
<link href="~/lib/jtable/lib/themes/lightcolor/blue/jtable.min.css" rel="stylesheet" type="text/css" />


<div class="row">
    <div class="col-sm-12" id="gradovi">

    </div>
</div>


@section scripts {

    <script type="text/javascript" src="~/lib/jquery/jquery.min.js"></script>
    <script type="text/javascript" src="~/lib/jqueryui/jquery-ui.min.js"></script>
    <script type="text/javascript" src="~/lib/jtable/lib/jquery.jtable.min.js"></script>
    <script type="text/javascript" src="~/lib/jtable/lib/localization/jquery.jtable.hr.js"></script>
    <script type="text/javascript">

        $(document).ready(function () {
            var baseurl = window.location.href.replace("/Grad/JTable", "")
            console.log(baseurl)
            $('#gradovi').jtable({
                title: 'Popis gradova',
                paging: true,
                pageSize: 10,
                sorting: true,
                defaultSorting: 'SifGrada DESC',
                actions: {
                    listAction: baseurl + '/jtable/grad/getall',
                    createAction: baseurl + '/jtable/grad/create',
                    updateAction: baseurl + '/jtable/grad/update',
                    deleteAction: baseurl + '/jtable/grad/delete'
                },
                fields: {

                    SifGrada: {
                        key: true,
                        title: 'Sifra grada'

                    },
                    NazivGrada: {
                        title: 'Naziv grada',
                        width: '20%'
                    },
                    SifDrzava: {
                        title: 'Sifra drzave',
                        width: '20%'
                    }
                }
            });

            $("#gradovi").jtable('load');


        });
    </script>
    <partial name="IncludeValidation" />
}