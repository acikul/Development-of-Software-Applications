@model JavnaNabava.ViewModels.StavkeViewModel

@{
    ViewBag.Title = "Stavke";
}

<h2>Popis stavki</h2>


<a asp-action="Create">Unos nove stavke</a>

<pager page-info="@Model.PagingInfo" page-action="Index" page-title="Unesite željenu stranicu"
       class="float-right">
</pager>

<table class="table table-sm table-striped table-hover">
    <thead>
        <tr>
            <th>
                <a asp-route-sort="1" asp-route-page="@Model.PagingInfo.CurrentPage" asp-route-ascending="@(Model.PagingInfo.Sort == 1 ? !Model.PagingInfo.Ascending : true)">
                    Sifra stavke
                </a>
            </th>
            <th>
                <a asp-route-sort="2" asp-route-page="@Model.PagingInfo.CurrentPage" asp-route-ascending="@(Model.PagingInfo.Sort == 2 ? !Model.PagingInfo.Ascending : true)">
                    Naziv stavke
                </a>
            </th>
            <th>
                <a asp-route-sort="3" asp-route-page="@Model.PagingInfo.CurrentPage" asp-route-ascending="@(Model.PagingInfo.Sort == 3 ? !Model.PagingInfo.Ascending : true)">
                    Jedinična cijena
                </a>
            </th>
            <th>
                <a asp-route-sort="4" asp-route-page="@Model.PagingInfo.CurrentPage" asp-route-ascending="@(Model.PagingInfo.Sort == 3 ? !Model.PagingInfo.Ascending : true)">
                    Stopa PDV-a
                </a>
            </th>
            <th>
                <a asp-route-sort="5" asp-route-page="@Model.PagingInfo.CurrentPage" asp-route-ascending="@(Model.PagingInfo.Sort == 3 ? !Model.PagingInfo.Ascending : true)">
                    Kolicina
                </a>
            </th>
            <th>
                <a asp-route-sort="6" asp-route-page="@Model.PagingInfo.CurrentPage" asp-route-ascending="@(Model.PagingInfo.Sort == 3 ? !Model.PagingInfo.Ascending : true)">
                    Ukupna cijena
                </a>
            </th>
            <th>
                <a asp-route-sort="7" asp-route-page="@Model.PagingInfo.CurrentPage" asp-route-ascending="@(Model.PagingInfo.Sort == 3 ? !Model.PagingInfo.Ascending : true)">
                    Napomena ponuditelja
                </a>
            </th>
            <th>
                <a asp-route-sort="8" asp-route-page="@Model.PagingInfo.CurrentPage" asp-route-ascending="@(Model.PagingInfo.Sort == 3 ? !Model.PagingInfo.Ascending : true)">
                    Jedinična cijena s PDV-om
                </a>
            </th>
            <th>
                <a asp-route-sort="9" asp-route-page="@Model.PagingInfo.CurrentPage" asp-route-ascending="@(Model.PagingInfo.Sort == 3 ? !Model.PagingInfo.Ascending : true)">
                    Ukupna cijena s PDV-om
                </a>
            </th>
            <th>
                <a asp-route-sort="10" asp-route-page="@Model.PagingInfo.CurrentPage" asp-route-ascending="@(Model.PagingInfo.Sort == 3 ? !Model.PagingInfo.Ascending : true)">
                    Iznos PDV-a
                </a>
            </th>
            <th>
                <a asp-route-sort="11" asp-route-page="@Model.PagingInfo.CurrentPage" asp-route-ascending="@(Model.PagingInfo.Sort == 3 ? !Model.PagingInfo.Ascending : true)">
                    Napomena narucitelja
                </a>
            </th>
            <th>
                <a asp-route-sort="12" asp-route-page="@Model.PagingInfo.CurrentPage" asp-route-ascending="@(Model.PagingInfo.Sort == 3 ? !Model.PagingInfo.Ascending : true)">
                    Sifra troskovnika
                </a>
            </th>
            <th>
                <a asp-route-sort="13" asp-route-page="@Model.PagingInfo.CurrentPage" asp-route-ascending="@(Model.PagingInfo.Sort == 3 ? !Model.PagingInfo.Ascending : true)">
                    Naziv vrste stavke
                </a>
            </th>


            <th></th>
        </tr>

    </thead>
    <tbody>
        @foreach (var stavka in Model.Stavke)
        {
        <tr>
            <td class="text-left">@stavka.SifStavke</td>
            <td class="text-left">@stavka.NazivStavke</td>
            <td class="text-left">@stavka.JedCijena</td>
            <td class="text-left">@stavka.StopaPdv</td>
            <td class="text-left">@stavka.Kolicina</td>
            <td class="text-left">@stavka.UkCijena</td>
            <td class="text-left">@stavka.NapomenaPonuditelja</td>
            <td class="text-left">@stavka.JedCijenaSaPdv</td>
            <td class="text-left">@stavka.UkCijenaSaPdv</td>
            <td class="text-left">@stavka.IznosPdv</td>
            <td class="text-left">@stavka.NapomenaNarucitelja</td>
            <td class="text-left">@stavka.SifTroskovnik</td>
            <td class="text-left">@stavka.NazivVrsteStavke</td>
            <td class="btn-group">
                <a asp-action="Edit"
                   asp-route-id="@stavka.SifStavke"
                   asp-route-page="@Model.PagingInfo.CurrentPage"
                   asp-route-sort="@Model.PagingInfo.Sort"
                   asp-route-ascending="@Model.PagingInfo.Ascending"
                   class="btn btn-sm"
                   title="Ažuriraj"><i class="fas fa-edit"></i></a>
            </td>
            <td>
                <form asp-action="Delete" method="post"
                      asp-route-page="@Model.PagingInfo.CurrentPage"
                      asp-route-sort="@Model.PagingInfo.Sort"
                      asp-route-ascending="@Model.PagingInfo.Ascending">
                    <input type="hidden" name="SifStavke" value="@stavka.SifStavke" />
                    <button type="submit" class="btn btn-sm btn-danger delete" title="Obriši"><i class="fas fa-trash-alt"></i></button>
                </form>
            </td>
        </tr>
        }
    </tbody>
</table>

@section scripts {
    <script src="~/js/pager.js" asp-append-version="true"></script>
}