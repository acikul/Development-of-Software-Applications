@model JavnaNabava.ViewModels.PonuditeljViewModel

@{
    ViewData["Title"] = "Detalji ponuditelja";
}


<div>
    <h1> @Model.ponuditelj.NazivPonuditelja</h1>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Adresa ponuditelja
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ponuditelj.AdresaPonuditelja)
        </dd>
        <dt class="col-sm-2">
            Poštanski broj ponuditelja
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ponuditelj.PbrPonuditelja)
        </dd>
        <dt class="col-sm-2">
            Klasa ponuditelja
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ponuditelj.KlasaPonuditelja)
        </dd>
        <dt class="col-sm-2">
            Konzorcij
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ponuditelj.OibkonzorcijaNavigation.NazivKonzorcija)
        </dd>
        <dt class="col-sm-2">
            Grad
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ponuditelj.SifGradaNavigation.NazivGrada)
        </dd>
        <dt class="col-sm-2">
            OIB
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ponuditelj.Oibponuditelja)
        </dd>
    </dl>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Vrsta kontakta
                </th>
                <th>
                    Kontakt
                </th>
            </tr>
        </thead>
        @foreach (var kontakt in Model.kontakti)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => kontakt.SifVrsteKontaktaNavigation.NazivVrsteKontakta)</td>
                <td>@Html.DisplayFor(modelItem => kontakt.TekstKontakta)</td>
            </tr>
        }
    </table>
</div>

<div>
    @if (Model.prethodniKontroler == "KontaktPonuditelj")
    {
        <a class="nav-link" asp-action="Index" asp-controller="@Model.prethodniKontroler"
           asp-route-page="@Model.PagingInfo.CurrentPage"
                    asp-route-sort="@Model.PagingInfo.Sort"
                    asp-route-ascending="@Model.PagingInfo.Ascending">Povratak</a>

    }
    else
    {
        <a class="nav-link" asp-action="Index" asp-controller="@Model.prethodniKontroler">Povratak</a>
    }
</div>
