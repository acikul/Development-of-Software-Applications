@model Ponuditelj2ViewModel
@{ ViewBag.Title = "Unos novog ponuditelja"; }

<div class="container">
    <form id="dokument_form" method="post" asp-action="Create">
        <div asp-validation-summary="All" class="form-group row"></div>

        <div class="form-group row">

            <label asp-for="NazivPonuditelja" class="col-sm-2 col-form-label">Naziv ponuditelja</label>
            <div class="col-sm-4">
                <input asp-for="NazivPonuditelja" class="form-control" />
            </div>

            <label asp-for="AdresaPonuditelja" class="col-sm-2 col-form-label">Adresa ponuditelja</label>
            <div class="col-sm-4">
                <input asp-for="AdresaPonuditelja" class="form-control" />
            </div>

            <label asp-for="KlasaPonuditelja" class="col-sm-2 col-form-label">Klasa ponuditelja</label>
            <div class="col-sm-2">
                <input asp-for="KlasaPonuditelja" class="form-control" />
            </div>

            <label asp-for="PbrPonuditelja" class="col-sm-2 col-form-label">Pbr ponuditelja</label>
            <div class="col-sm-2">
                <input asp-for="PbrPonuditelja" class="form-control" />
            </div>

            <label asp-for="Oibkonzorcija" class="col-sm-1 col-form-label">Konzorcij</label>
            <div class="form-group">
                <select asp-for="Oibkonzorcija" class="form-control" asp-items="ViewBag.oibKonzorcija"></select>
            </div>
            <div style="width: 100px"></div>

            <label asp-for="SifGrada" class="col-sm-1 col-form-label">Grad</label>
            <div class="col-sm-1">
                <input asp-for="SifGrada" readonly="readonly" class="form-control" data-autocomplete-placeholder="Gradovi" />
            </div>
            <div class="col-sm-2">
                <input class="form-control" data-autocomplete="Gradovi" asp-for="NazivGrada" />
            </div>

            <label asp-for="Oibponuditelja" class="col-sm-2 col-form-label">Oib ponuditelja</label>
            <div class="col-sm-3">
                <input asp-for="Oibponuditelja" id="" class="form-control" />
            </div>


            <div class="col-sm-2">
                <button id="save" type="submit" class="btn btn-sm btn-primary save" title="Spremi"><i class="fas fa-save"></i></button>
            </div>
        </div>

        <div class="col-sm-10">
            <partial name="KontaktiCreate" model="Model.kontakti" />
        </div>
    </form>
</div>

<partial name="NoviKontaktTemplate" />

@section styles{
    <link rel="stylesheet" href="~/lib/jqueryui/themes/base/jquery-ui.css" />
}

@section scripts{
    <partial name="IncludeValidation" />
    <script src="~/lib/jqueryui/jquery-ui.js"></script>
    <script src="~/js/autocomplete.js" asp-append-version="true"></script>
    <script src="~/js/ponuditelji.js" asp-append-version="true"></script>
}


