@model StrucnjakViewModel
@{
    ViewBag.Title = "Unos novog stručnjaka";
}

<h2>Unos novog stručnjaka</h2>

<div class="container">
    <form asp-action="Create" method="post" id="dokument_form">
        <div asp-validation-summary="All" class="form-group row"></div>

        <div class="form-group row">
            <label asp-for="Oibstrucnjaka" class="col-sm-1 col-form-label"></label>
            <div class="col-sm-2">
                <input asp-for="Oibstrucnjaka" class="form-control" />
            </div>

            <label asp-for="ImeStrucnjaka" class="col-sm-1 col-form-label"></label>
            <div class="col-sm-2">
                <input asp-for="ImeStrucnjaka" class="form-control" />
            </div>

            <label asp-for="PrezimeStrucnjaka" class="col-sm-1 col-form-label"></label>
            <div class="col-sm-2">
                <input asp-for="PrezimeStrucnjaka" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="EmailStrucnjaka" class="col-sm-1 col-form-label"></label>
            <div class="col-sm-2">
                <input asp-for="EmailStrucnjaka" class="form-control" />
            </div>
            <label asp-for="BrojMobitelaStrucnjaka" class="col-sm-1 col-form-label"></label>
            <div class="col-sm-2">
                <input asp-for="BrojMobitelaStrucnjaka" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Oibponuditelja" class="col-sm-1 col-form-label">Poslodavac</label>
            <div class="col-sm-1">
                <input asp-for="Oibponuditelja" readonly="readonly" class="form-control" data-autocomplete-placeholder="Ponuditelji" />
            </div>
            <div class="col-sm-3">
                <input class="form-control" data-autocomplete="Ponuditelji" asp-for="@Model.NazivPonuditelja" />
            </div>

            <label asp-for="SifGrada" class="col-sm-1 col-form-label">Grad</label>
            <div><span asp-validation-for="SifGrada" class="text-danger"></span></div>
            <div class="col-sm-1">
                <input asp-for="SifGrada" readonly="readonly" class="form-control" data-autocomplete-placeholder="Gradovi" />
            </div>
            <div class="col-sm-3">
                <input class="form-control" data-autocomplete="Gradovi" asp-for="@Model.NazivGrada" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="SifStrucneSpreme"></label>
            <div><span asp-validation-for="SifStrucneSpreme" class="text-danger"></span></div>
            <div class="col-sm-5">
            <select class="form-control" asp-for="SifStrucneSpreme" asp-items="ViewBag.StrucneSpreme">
                <option disabled selected value="">Odaberite stručnu spremu</option>
            </select>
            </div>

            <div class="col-sm-2">
                <button id="save" type="submit" class="btn btn-sm btn-primary save" title="Spremi"><i class="fas fa-save"></i></button>
                <a class="btn btn-sm btn-primary cancel" asp-action="Index" title="Odustani">
                    <i class="fas fa-undo-alt"></i>
                </a>
            </div>
        </div>

        @*<div class="col-sm-10">
            <partial name="Kompetencije" model="Model.Kompetencije" />
        </div>*@
    </form>
</div>

@*<partial name="NovaKompetencijaTemplate" />*@

