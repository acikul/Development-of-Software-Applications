@model StrucnjakViewModel
@{
    ViewBag.Title = "Izmjena stručnjaka";
}

<h2>Unos novog stručnjaka</h2>

<div class="container">
    <form id="dokument_form" method="post" asp-action="Create">
        @*asp-route-page="@ViewBag.Page"
        asp-route-sort="@ViewBag.Sort"
        asp-route-ascending="@ViewBag.Ascending"
        asp-route-filter="@ViewBag.Filter"
        asp-route-position="@ViewBag.Position">*@

        <div asp-validation-summary="All" class="form-group row"></div>

        <div class="form-group row">
            <label asp-for="Oibstrucnjaka" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-2">
                <input asp-for="Oibstrucnjaka" class="form-control" />
            </div>
            <div class="col-sm-2">
                <button id="save" type="submit" class="btn btn-sm btn-primary save" title="Spremi"><i class="fas fa-save"></i></button>
                <a class="btn btn-sm btn-primary cancel" asp-action="Index" title="Odustani">
                    <i class="fas fa-undo-alt"></i>
                </a>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="ImeStrucnjaka" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-2">
                <input asp-for="ImeStrucnjaka" class="form-control" />
            </div>
            <label asp-for="PrezimeStrucnjaka" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-2">
                <input asp-for="PrezimeStrucnjaka" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="BrojMobitelaStrucnjaka" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-2">
                <input asp-for="BrojMobitelaStrucnjaka" class="form-control" />
            </div>
            <label asp-for="EmailStrucnjaka" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-2">
                <input asp-for="EmailStrucnjaka" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="SifGrada" class="col-sm-1 col-form-label"></label>
            <div class="col-sm-1">
                <input asp-for="SifGrada" type="hidden" class="form-control" data-autocomplete-placeholder="Gradovi" />
            </div>
            @*<label asp-for="NazivGrada" class="col-sm-2 col-form-label"></label>*@
            <div class="col-sm-2">
                <input asp-for="NazivGrada" class="form-control" data-autocomplete="Gradovi" />
            </div>

            @*<label asp-for="SifStrucneSpreme" class="col-sm-1 col-form-label"></label>*@
            <div>
                <input asp-for="SifStrucneSpreme" type="hidden" class="form-control" data-autocomplete-placeholder="StrucneSpreme" />
            </div>
            <label asp-for="NazivStrucneSpreme" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-2">
                <input asp-for="NazivStrucneSpreme" class="form-control" data-autocomplete="StrucneSpreme" />
            </div>
        </div>
        <div class="form-group row">
            @*<label asp-for="Oibponuditelja" class="col-sm-1 col-form-label"></label>*@
            <div>
                <input asp-for="Oibponuditelja" type="hidden" class="form-control" data-autocomplete-placeholder="Ponuditelji" />
            </div>
            <label asp-for="NazivPonuditelja" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-2">
                <input asp-for="NazivPonuditelja" class="form-control" data-autocomplete="Ponuditelji" />
            </div>
        </div>

        <div class="col-sm-10">
            <partial name="Kompetencije" model="Model.Kompetencije" />
        </div>
    </form>
</div>


<partial name="NovaKompetencijaTemplate" />


@section styles{
    <link rel="stylesheet" href="~/lib/jqueryui/themes/base/jquery-ui.css" />
}

@section scripts{
    <partial name="IncludeValidation" />
    <script src="~/lib/jqueryui/jquery-ui.js"></script>
    <script src="~/js/autocomplete.js"></script>
    <script src="~/js/strucnjaci.js" asp-append-version="true"></script>
}
