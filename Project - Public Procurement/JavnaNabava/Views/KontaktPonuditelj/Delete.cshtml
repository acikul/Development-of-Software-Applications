@model JavnaNabava.Models.KontaktPonuditelj

@{
    ViewData["Title"] = "Brisanje";
}

<h3>Želite li obrisati ovo?</h3>
<div>
    <h4>@Model.OibponuditeljaNavigation.NazivPonuditelja</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
           Kontakt
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TekstKontakta)
        </dd>
        <dt class = "col-sm-2">
            Ponuditelj
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OibponuditeljaNavigation.NazivPonuditelja)
        </dd class>
        <dt class = "col-sm-2">
            Vrsta kontakta
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SifVrsteKontaktaNavigation.NazivVrsteKontakta)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="SifKontakt" />
        <input type="submit" value="Izbriši" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
