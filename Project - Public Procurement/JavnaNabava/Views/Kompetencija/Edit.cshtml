@model Kompetencija

@{
    ViewBag.Title = "Ažuriranje kompetencije";
}


<form asp-route-page="@ViewBag.Page"
      asp-route-sort="@ViewBag.Sort"
      asp-route-ascending="@ViewBag.Ascending"
      method="post">
    <div asp-validation-summary="All"></div>

    <input type="hidden" asp-for="SifKompetencije" />
    <div class="form-group">
        <label asp-for="DetaljiKompetencije"></label>
        <div><span asp-validation-for="DetaljiKompetencije" class="text-danger"></span></div>
        <input asp-for="DetaljiKompetencije" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Oibstrucnjaka"></label>
        <div><span asp-validation-for="Oibstrucnjaka" class="text-danger"></span></div>
        <select class="form-control" asp-for="Oibstrucnjaka" asp-items="ViewBag.oibovi">
        </select>
    </div>
    <div class="form-group">
        <label asp-for="SifVrsteKompetencije"></label>
        <div><span asp-validation-for="SifVrsteKompetencije" class="text-danger"></span></div>
        <select class="form-control" asp-for="SifVrsteKompetencije" asp-items="ViewBag.vrsteKompetencija">
        </select>
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Spremi</button>
        <a asp-action="Index"
           asp-route-page="@ViewBag.Page"
           asp-route-sort="@ViewBag.Sort"
           asp-route-ascending="@ViewBag.Ascending"
           class="btn btn-secondary">Odustani</a>
    </div>
</form>

@section scripts {
    <partial name="IncludeValidation" />
}
